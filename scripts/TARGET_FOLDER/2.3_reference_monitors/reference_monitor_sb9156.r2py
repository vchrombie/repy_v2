class LPFile():
    def __init__(self, filename, create):
        # globals
        mycontext['debug'] = False
        self.LPfile = openfile(filename, create)
        if self.LPfile is None:
            raise FileClosedError()
        self.pending_data = None
        self.pending_offset = None
        self.previous_data = None
        self.previous_offset = None
        self.lock = createlock()

    def readat(self, bytes, offset):
        if bytes < -1:
            raise RepyArgumentError("Invalid byte count for reading")

        self.lock.acquire(True)
        try:
            return self.LPfile.readat(bytes, offset)
        finally:
            self.lock.release()
        
    def writeat(self, data, offset):
        if self.LPfile is None:
            raise FileClosedError()
        self.lock.acquire(True)               
        if self.pending_data != None and self.pending_offset != None:
            self.previous_data = self.LPfile.readat(len(self.pending_data), self.pending_offset)
            self.previous_offset = self.pending_offset
        else:
            pass
        if data is None or offset is None:
            raise ValueError("Sorry, Data and offset are null values ")
  
        elif (offset<0):
            raise RepyArgumentError("Offset cannot be negative")
        else:
            if self.pending_data != None and self.pending_offset != None:
                self.LPfile.writeat(self.pending_data, self.pending_offset)
            self.pending_data = data
            self.pending_offset = offset
        self.lock.release()

    def undo(self):
        self.lock.acquire(True)
        length = self.LPfile.readat(None, 0)
        len_length = len(length)
        if len_length <= 0:
            pass 
        else:
            self.pending_data = None
            self.pending_offset = None
        self.lock.release()

    def close(self):
        self.lock.acquire(True)
        try:
            if self.pending_data != None and self.pending_offset != None:
                self.LPfile.writeat(self.pending_data, self.pending_offset)
            self.LPfile.close()
        finally:
            self.lock.release()

def LPopenfile(filename, create):
    return LPFile(filename, create)

