class LPFile():
    def __init__(self, filename, create):
        # globals
        mycontext['debug'] = False
        self.LPfile = openfile(filename, create)
        self.pending_data = None
        self.pending_offset = None
        self.MAX_DATA_LENGTH = 1024
        self._closed = False


    def readat(self, bytes, offset):
        return self.LPfile.readat(bytes, offset)
    def writeat(self, data, offset):
    # Validate inputs
        if not isinstance(data, str):
            raise ValueError("Invalid data type.")
        if not isinstance(offset, int) or offset < 0:
            raise RepyArgumentError("Invalid offset value.")
        if len(data) > self.MAX_DATA_LENGTH:
            raise ValueError("Data length exceeds the maximum limit.")
        
        # Check if the offset is beyond the file's length
        file_len = len(self.LPfile.readat(None, 0))
        if offset > file_len:
            raise SeekPastEndOfFileError("Attempted to write past the end of file.")
        
        # If there's no pending write or if the current offset doesn't match the pending offset, then commit the pending write
        if self.pending_data is not None and offset != self.pending_offset:
            self.LPfile.writeat(self.pending_data, self.pending_offset)

        # Save the current write operation for potential undo
        self.pending_data = data
        self.pending_offset = offset

    def undo(self):
        if not self._closed:
            self.pending_data = None
            self.pending_offset = None

    def close(self):
        # If there is a pending write, write it to the file before closing
        if self.pending_data is not None:
            self.LPfile.writeat(self.pending_data, self.pending_offset)
        self.LPfile.close()
        self._close = True

def LPopenfile(filename, create):
    valid = True
    for c in filename:
        if not (c.islower() or c.isdigit() or c == '.'):
            valid = False
            break
    if not valid:
        raise ValueError("Invalid filename. The filename can only contain lowercase letters and numbers.")

    return LPFile(filename, create)

